{
  "name": "spotify-song-challenge",
  "version": "1.0.0",
  "description": "Spotify Song Challenge",
  "author": "Felipe Tiozo",
  "license": "MIT",
  "scripts": {
    "lint": "eslint . --ext .ts --fix",
    "build": "tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./src -o ./dist",
    "start:watch": "ts-node-dev -r tsconfig-paths/register --watch src --respawn --transpile-only src/server.ts",
    "start": "ts-node-dev -r tsconfig-paths/register src/server.ts",
    "test": "ts-mocha --require src/test_hooks.ts --paths src/**/*test.ts",
    "populate": "ts-node-dev -r tsconfig-paths/register src/populate/cli.ts",
    "coverage": "nyc yarn test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "nyc": {
    "reporter": [
      "text",
      "text-summary",
      "lcov"
    ],
    "exclude": [
      "src/**/test.ts",
      "src/middlewares/*",
      "src/setup/*",
      "src/populate/*"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "yarn run lint"
    ]
  },
  "dependencies": {
    "@types/lodash": "^4.14.159",
    "api-query-params": "^5.0.0",
    "axios": "^0.19.2",
    "chalk": "^4.1.0",
    "crypto": "^1.0.1",
    "dotenv": "^8.2.0",
    "express": "^4.16.4",
    "express-validator": "^5.3.1",
    "forever": "^3.0.2",
    "http-status-codes": "^1.3.2",
    "ics": "^2.23.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "moment": "^2.29.1",
    "moment-timezone": "^0.5.31",
    "mongoose": "^5.5.7",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "nyc": "^15.1.0",
    "request": "^2.88.0",
    "sinon": "^9.2.0",
    "ts-mocha": "^7.0.0",
    "ts-node-dev": "^1.0.0-pre.63",
    "typescript": "^4.0.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/config": "0.0.34",
    "@types/express": "^4.16.1",
    "@types/gravatar": "^1.8.0",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/mocha": "^8.0.3",
    "@types/mongoose": "^5.5.0",
    "@types/node": "^14.11.2",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "mocha": "^8.1.3",
    "prettier": "^2.1.2",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "tscpaths": "^0.0.9"
  }
}
